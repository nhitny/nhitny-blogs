rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // POSTS (top-level)
    match /posts/{postId} {
      // Allow public read for all posts
      // (Client-side filtering will show only published/scheduled posts)
      allow read: if true;

      // Only admin can write (create/delete)
      allow create, delete: if isAdmin();
      
      // Allow update for incrementing views/likes/commentsCount OR if admin
      // (Order changed to prevent isAdmin crash from blocking valid counter updates)
      allow update: if (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'likes', 'commentsCount']))
                    || isAdmin();

      // COMMENTS (Sub-collection)
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isAdmin() ||
          (isSignedIn() && request.auth.uid == resource.data.userId);
      }
    }

    // COMMENTS (top-level) - Keep for backward compatibility if needed, or remove
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.userId); // Changed uid to userId to match code
    }

    // LIKES (top-level)
    match /likes/{likeId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && request.auth.uid == resource.data.uid;
    }

    // TOPICS
    match /topics/{topicId} {
      allow read: if true;
    }

    // USERS
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
