{
  "compilerOptions": {
    // ---- Module & Target ----
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",

    // ---- TypeScript Options ----
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // ---- Library Environment ----
    "lib": ["dom", "dom.iterable", "esnext"],

    // ---- Base Paths & Aliases ----
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/Lib/*": ["Lib/*"],
      "@/firebase/*": ["firebase/*"],
      "@/Redux/*": ["Redux/*"],
      "@/styles/*": ["styles/*"]
    },

    // ---- Next.js Plugin ----
    "plugins": [{ "name": "next" }]
  },

  // ---- Files Included in Compilation ----
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
